{
  "paths": [
    "src/*/*/include/*.hpp",
    "src/*/*/src/*.cpp",
    "src/*/*/includes/*.h",
    "src/*/*/source/*.cpp",
    "src/*/*/test/src/*.cpp",
    "src/*/*/test/inlude/*.hpp"
  ],
  "filterPre": [".*", "**mainwindow.h"],
  "tidyRoot": ".",
  "buildRoot": "build/",
  "compilationDatabase": "build/compile_commands.json",
  "tidyFile": ".clang-tidy",
  "command": "/usr/bin/clang-tidy-18"
}
